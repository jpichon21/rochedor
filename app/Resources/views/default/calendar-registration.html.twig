{% set bodyClass = "page" %}
{% set bodyBackground = page.background %}
{% extends 'base.html.twig' %}
{% block stylesheets %}
<link rel="stylesheet" type="text/css" media="screen" href="{{ asset("assets/css/calendar-registration.css") }}">
<link rel="stylesheet" type="text/css" media="screen" href="{{ asset("assets/css/pure-css-grids.css") }}">
{% endblock %}
{% block content %}
<div class="content">
    <div class="left">
        <div class="inner">
            <h1><small>{{ page.title }} </small>{{ page.subTitle }}</h1>
            {% if page.content.intro %}
            <div class="intro">
                {{ page.content.intro | raw }}
            </div>
            {% endif %}
            <div class="dropdown">
                <div class="item connection">
                    <h2>{{ 'calendar.registration.one.title' | trans() | raw }}</h2>
                    <p>{{ 'calendar.registration.one.body' | trans() | raw }}</p>
                    <div class="pure-g">
                        <div class="pure-u-4-24">
                            <a href="#connection" class="button yes">Oui</a>
                        </div>
                        <div class="pure-u-4-24">
                            <a href="#registration" class="button no">Non</a>
                        </div>
                    </div>
                    <div class="panel connection">
                        <h3>{{ 'calendar.registration.one.title.connection' | trans() | raw }}</h3>
                        <form class="pure-g connection">
                            <div class="pure-u-10-24">
                                <input class="input username" type="text" name="username" placeholder="{{ 'form.username' | trans() | raw }}">
                            </div>
                            <div class="pure-u-10-24">
                                <input class="input password" type="password" name="password" placeholder="{{ 'form.password' | trans() | raw }}">
                            </div>
                            <div class="pure-u-4-24">
                                <input class="button submit" type="submit" value="{{ 'form.ok' | trans() | raw }}">
                            </div>
                        </form>
                    </div>
                    <div class="panel registration">
                        <h3>{{ 'calendar.registration.one.title.registration' | trans() | raw }}</h3>
                        <form class="pure-g registration">
                            <div class="pure-u-1-3">
                                <select class="select civility">
                                    <option selected>{{ 'form.civility.mr' | trans() | raw }}</option>
                                    <option>{{ 'form.civility.mme' | trans() | raw }}</option>
                                </select>
                            </div>
                            <div class="pure-u-1-3">
                                <input class="input surname" type="text" name="surname" placeholder="{{ 'form.surname' | trans() | raw }}">
                            </div>
                            <div class="pure-u-1-3">
                                <input class="input name" type="text" name="name" placeholder="{{ 'form.name' | trans() | raw }}">
                            </div>
                            <div class="pure-u-1">
                                <textarea class="textarea address" type="text" name="address" placeholder="{{ 'form.address' | trans() | raw }}"></textarea>
                            </div>
                            <div class="pure-u-1-3">
                                <input class="input zipcode" type="text" name="zipcode" placeholder="{{ 'form.zipcode' | trans() | raw }}">
                            </div>
                            <div class="pure-u-1-3">
                                <input class="input city" type="text" name="city" placeholder="{{ 'form.city' | trans() | raw }}">
                            </div>
                            <div class="pure-u-1-3">
                                <input class="input country" type="text" name="country" placeholder="{{ 'form.country' | trans() | raw }}">
                            </div>
                            <div class="pure-u-1-3">
                                <input class="input phone" type="text" name="phone" placeholder="{{ 'form.phone' | trans() | raw }}">
                            </div>
                            <div class="pure-u-1-3">
                                <input class="input mobile" type="text" name="mobile" placeholder="{{ 'form.mobile' | trans() | raw }}">
                            </div>
                            <div class="pure-u-1-3">
                                <input class="input email" type="text" name="email" placeholder="{{ 'form.email' | trans() | raw }}">
                            </div>
                            <div class="pure-u-1-2">
                                <input class="input birthday" type="text" name="birthday" placeholder="{{ 'form.birthday' | trans() | raw }}">
                            </div>
                            <div class="pure-u-1-2">
                                <input class="input profession" type="text" name="profession" placeholder="{{ 'form.profession' | trans() | raw }}">
                            </div>
                            <div class="pure-u-4-24">
                                <input class="input button submit" type="submit" value="{{ 'form.submit' | trans() | raw }}">
                            </div>
                        </form>
                    </div>
                </div>
                <div class="item participants">
                    <h2>{{ 'calendar.registration.two.title' | trans() | raw }}</h2>
                    <h3>{{ 'calendar.registration.two.title.you' | trans() | raw }}</h3>
                    <div class="you-render"></div>
                    <h3>{{ 'calendar.registration.two.title.registered' | trans() | raw }}</h3>
                    <div class="registered-render"></div>
                    <a href="#" class="add-participant">{{ 'calendar.registration.two.add_participant' | trans() | raw }}</a>
                    <a href="#" class="validate-participants button submit">{{ 'calendar.registration.two.validate_participants' | trans() | raw }}</a>
                    <div class="panel registration">
                        <h3>{{ 'calendar.registration.one.title.registration' | trans() | raw }}</h3>
                        <div class="modify-render"></div>
                    </div>
                </div>
                <div class="item validation">
                    <h2>{{ 'calendar.registration.three.title' | trans() | raw }}</h2>
                    {{ 'calendar.registration.three.body' | trans({'%entry_number%': 'R18-00002'}) | raw }}
                </div>
            </div>
        </div>
    </div>
    <div class="hole">
    </div>
    <div class="right">
        <div class="inner">
            <h2>{{ 'calendar.registration.summary.title' | trans() | raw }}</h2>
            <h3>{{ 'calendar.registration.summary.title.retreat' | trans() | raw }}</h3>
            <div class="retreat-render"></div>
            <h3>{{ 'calendar.registration.summary.title.participants' | trans() | raw }}</h3>
            <div class="participants-render"></div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
<script type="text/template" class="retreat-template">
    <p>&laquo;<%= retreat.libact %>&raquo;<br>
    {{ 'filter.inner.date.in' | trans() | raw }} <%= retreat.datdeb %> {{ 'filter.inner.date.out' | trans() | lower | raw }} <%= retreat.datfin %> (<%= retreat.sitact %>)</p>
</script>
<script type="text/template" class="you-template">
    <p><%= you.prenom %> <%= you.nom %><br>
        <%= you.adresse %> <%= you.cp %> <%= you.ville %> <%= you.pays %></p>
</script>
<script type="text/template" class="participants-template">
    <% for (var i = 0; i < participants.length; i++) { %>
    <% var him = participants[i] %>
        <div class="him">
            <p><%= him.prenom %> <%= him.nom %><br>
                <%= him.adresse %> <%= him.cp %> <%= him.ville %> <%= him.pays %></p>
        </div>
    <% } %>
</script>
<script type="text/template" class="registered-template">
    <% for (var i = 0; i < registered.length; i++) { %>
    <% var him = registered[i] %>
        <div class="him">
            <p><%= him.prenom %> <%= him.nom %><br>
                <%= him.adresse %> <%= him.cp %> <%= him.ville %> <%= him.pays %></p>
            <a href="#" data-id="<%= him.codco %>" class="modifiy-him button">{{ 'form.modify' | trans() | raw }}</a>
            <a href="#" data-id="<%= him.codco %>" class="participate-him button radio">{{ 'form.participate' | trans() | raw }}</a>
        </div>
    <% } %>
</script>
<script type="text/template" class="modify-template">
    <form class="pure-g modify">
        <div class="pure-u-1-3">
            <select class="select civility">
                <option selected>{{ 'form.civility.mr' | trans() | raw }}</option>
                <option>{{ 'form.civility.mme' | trans() | raw }}</option>
            </select>
        </div>
        <div class="pure-u-1-3">
            <input class="input surname" type="text" value="<%= participant.surname %>" name="surname" placeholder="{{ 'form.surname' | trans() | raw }}">
        </div>
        <div class="pure-u-1-3">
            <input class="input name" type="text" value="<%= participant.name %>" name="name" placeholder="{{ 'form.name' | trans() | raw }}">
        </div>
        <div class="pure-u-1">
            <textarea class="textarea address" type="text" value="<%= participant.address %>" name="address" placeholder="{{ 'form.address' | trans() | raw }}"></textarea>
        </div>
        <div class="pure-u-1-3">
            <input class="input zipcode" type="text" value="<%= participant.zipcode %>" name="zipcode" placeholder="{{ 'form.zipcode' | trans() | raw }}">
        </div>
        <div class="pure-u-1-3">
            <input class="input city" type="text" value="<%= participant.city %>" name="city" placeholder="{{ 'form.city' | trans() | raw }}">
        </div>
        <div class="pure-u-1-3">
            <input class="input country" type="text" value="<%= participant.country %>" name="country" placeholder="{{ 'form.country' | trans() | raw }}">
        </div>
        <div class="pure-u-1-3">
            <input class="input phone" type="text" value="<%= participant.phone %>" name="phone" placeholder="{{ 'form.phone' | trans() | raw }}">
        </div>
        <div class="pure-u-1-3">
            <input class="input mobile" type="text" value="<%= participant.mobile %>" name="mobile" placeholder="{{ 'form.mobile' | trans() | raw }}">
        </div>
        <div class="pure-u-1-3">
            <input class="input email" type="text" value="<%= participant.email %>" name="email" placeholder="{{ 'form.email' | trans() | raw }}">
        </div>
        <div class="pure-u-1-2">
            <input class="input birthday" type="text" value="<%= participant.birthday %>" name="birthday" placeholder="{{ 'form.birthday' | trans() | raw }}">
        </div>
        <div class="pure-u-1-2">
            <input class="input profession" type="text" value="<%= participant.profession %>" name="profession" placeholder="{{ 'form.profession' | trans() | raw }}">
        </div>
        <div class="pure-u-1-4">
            <input class="input button submit" type="submit" value="{{ 'form.submit' | trans() | raw }}">
        </div>
    </form>
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.9.0/underscore-min.js"></script>
<script src="{{ asset("assets/js/calendar-registration.js") }}"></script>
{% endblock %}
