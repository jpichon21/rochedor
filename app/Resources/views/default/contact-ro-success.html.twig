{% set sections = [] %}
{% set bodyClass = "page" %}
{% set bodyBackground = 1 %}
{% extends 'base.html.twig' %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/css/pure-css-grids.css') }}">
<link rel="stylesheet" href="{{ asset('assets/css/page.css') }}">
{% endblock %}
{% block content %}
<div class="content">
    <div class="left">
        <div class="inner">
            <h1><small>{{ page.title }} </small>{{ page.subTitle }}</h1>
            {% if page.content.intro %}
            <div class="intro">
                {{ 'contact.submit.success' | trans | raw }}
            </div>
            {% endif %}
        </div>
    </div>
    <div class="hole">
    </div>
    <div class="right">
        {% for section in page.content['sections'] %}
        <div class="carousel {% if loop.first %}active{% endif %}"
            data-carousel-element="{{ section.title|md5 }}">
            <div class="slides">
                {% for slide in section.slides %}
                <div class="slide {% if loop.first %}active{% endif %}">
                    {% include 'parts/carousel/layout-' ~ slide.layout ~ '.html.twig'
                    with { 'images': slide.images } %}
                </div>
                {% endfor %}
            </div>
            {% if section.slides|length > 1 %}
            <div class="prev"></div>
            <div class="next"></div>
            {% endif %}
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
{% block javascripts %}
<script src="{{ asset("assets/js/page.js") }}"></script>
{% endblock %}