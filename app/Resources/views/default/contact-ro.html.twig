{% set sections = [] %}
{% set bodyClass = "page" %}
{% set bodyBackground = constant('AppBundle\\Entity\\Page::BACKGROUNDS')[1] %}
{% extends 'base.html.twig' %}
{% block stylesheets %}
<link rel="stylesheet" type="text/css" media="screen" href="{{ asset("assets/css/pure-css-grids.css") }}">
{% endblock %}
{% block content %}
<div class="content">
    <div class="left">
        <div class="inner">
            <h1><small>{{ page.title }} </small>{{ page.subTitle }}</h1>
            {% if page.content.intro %}
            <div class="intro">
                {{ page.content.intro | raw }}
            </div>
            {% endif %}
            <div class="dropdown single">
                <div class="item">
                    <h2>Formulaire de contact de la Roche d'Or</h2>
                    <div class="panel active">
                        <div class="pure-g">
                            {{ form_start(form) }}
                            <div class="pure-u-1-2">
                                {{ form_widget(form.name) }}
                            </div>
                            <div class="pure-u-1-2">
                                {{ form_widget(form.surname) }}
                            </div>
                            <div class="pure-u-1-2">
                                {{ form_widget(form.adress) }}
                            </div>
                            <div class="pure-u-1-2">
                                {{ form_widget(form.city) }}
                            </div>
                            <div class="pure-u-1-2">
                                {{ form_widget(form.zipcode) }}
                            </div>
                            <div class="pure-u-1-2">
                                {{ form_widget(form.mail) }}
                            </div>
                            <div class="pure-u-1-1">
                                {{ form_widget(form.body) }}
                            </div>
                            <div class="pure-u-1-1">
                                {{ form_widget(form.save) }}
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="hole">
    </div>
    <div class="right">
        {% for section in page.content['sections'] %}
        <div class="carousel {% if loop.first %}active{% endif %}"
            data-carousel-element="{{ section.title|md5 }}">
            <div class="slides">
                {% for slide in section.slides %}
                <div class="slide {% if loop.first %}active{% endif %}">
                    {% include 'parts/carousel/layout-' ~ slide.layout ~ '.html.twig'
                    with { 'images': slide.images } %}
                </div>
                {% endfor %}
            </div>
            {% if section.slides|length > 1 %}
            <div class="prev"></div>
            <div class="next"></div>
            {% endif %}
        </div>
        {% endfor %}
    </div>
</div>

{% endblock %}

{% block javascripts %}
<script src="{{ asset("assets/js/page.js") }}"></script>
{% endblock %}
