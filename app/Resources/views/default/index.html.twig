{% set bodyClass = "home" %}
{% block title %}{{ page.title ~ ' ' ~ page.subTitle }} - Logomotion{% endblock %}
{% block metadescription %}<meta name="description" content="{{ page.description }}">{% endblock %}
{% extends 'base.html.twig' %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/css/home.css') }}">
{% endblock %}
{% block content %}
<div class="animation-intro">
    <div class="element">
        <div class="logo"></div>
    </div>
</div>
<div class="overlay-begin"></div>
<div class="swipe-background"></div>
<section class="swipe-section">
    <article class="article-1 align-left">
            <div class="box">
                <h2>
                    <small>{{page.content['sections'][0].title|raw}}</small>
                    {% if 'sub_title' in page.content['sections'][0]|keys %}
                    {{page.content['sections'][0].sub_title|raw}}
                    {% endif %}
                </h2>
                {{page.content['sections'][0].body|raw}}
                <a class="button yellow" href="#">Découvrir</a>
            </div>
        <div class="scroll-down">
            <img src="{{ asset('assets/img/scroll.png') }}">
        </div>
        {% if lastNews %}
            <div class="nouveautes">
                <h2>Nouveautés</h2>
                <i>{{lastNews.intro}}</i>
                <div class="text">
                    <p>{{lastNews.description}}</p>
                </div>
                <a class="button black" href="{{lastNews.url}}">Lire la suite</a>
            </div>
        {% endif %}
    </article>
    <article class="article-2 align-right">
        <div class="box">
            <h2>
                <small>{{page.content['sections'][1].title|raw}}</small>
                {% if 'sub_title' in page.content['sections'][1]|keys %}
                {{page.content['sections'][1].sub_title|raw}}
                {% endif %}
            </h2>
            {{page.content['sections'][1].body|raw}}
            <a class="button yellow" href="#">Découvrir</a>
        </div>
    </article>
    <article class="article-3 align-left">
        <div class="box">
            <h2>
                <small>{{page.content['sections'][2].title|raw}}</small>
                {% if 'sub_title' in page.content['sections'][2]|keys %}
                {{page.content['sections'][2].sub_title|raw}}
                {% endif %}
            </h2>
            {{page.content['sections'][2].body|raw}}
            <a class="button yellow" href="#">Découvrir</a>
        </div>
    </article>
    <article class="article-4 align-right">
        <div class="box">
            <h2>
                <small>{{page.content['sections'][3].title|raw}}</small>
                {% if 'sub_title' in page.content['sections'][3]|keys %}
                {{page.content['sections'][3].sub_title|raw}}
                {% endif %}
            </h2>
            {{page.content['sections'][3].body|raw}}
            <a class="button yellow" href="#">Découvrir</a>
        </div>
    </article>
    <article class="article-5 right align-right">
        <div class="box">
            <h2>
                <small>{{page.content['sections'][4].title|raw}}</small>
                {% if 'sub_title' in page.content['sections'][4]|keys %}
                {{page.content['sections'][4].sub_title|raw}}
                {% endif %}
            </h2>
            {{page.content['sections'][4].body|raw}}
            <a class="button yellow" href="#">Découvrir</a>
        </div>
    </article>
    <article class="article-6 right align-left">
        <div class="box">
            <h2>
                <small>{{page.content['sections'][5].title|raw}}</small>
                {% if 'sub_title' in page.content['sections'][5]|keys %}
                {{page.content['sections'][5].sub_title|raw}}
                {% endif %}
            </h2>
            {{page.content['sections'][5].body|raw}}
            <a class="button yellow" href="#">Découvrir</a>
        </div>
    </article>
</section>
{% endblock %}
{% block javascripts %}
<script src="{{ asset("assets/js/home.js") }}"></script>
{% endblock %}
