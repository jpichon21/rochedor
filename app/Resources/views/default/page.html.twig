{% block metadescription %}
<meta name="description" content="{{ page.description }}">{% endblock %}
{% set bodyClass = 'page' %}
{% extends 'base.html.twig' %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/css/page.css') }}">
{% if page.type and page.type != 'page' %}
