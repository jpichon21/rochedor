{% set bodyClass = "page gift" %}
{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("assets/css/gift.css") }}">
{% endblock %}
{% block content %}
<div class="content">
    <div class="left">
        <div class="intro">
            {% if regular %}
                {% set period = period ~ '_label' %}
                {% set periodLabel = period|trans %}
                <p>{{ 'gift.payment.return.virement_regular'|trans({'%civility%': civility, '%name%': name, '%amount%': amount, '%period%': periodLabel})|raw }}</p>
            {% else %}
                <p>{{ 'gift.payment.return.virement'|trans({'%civility%': civility, '%name%': name, '%amount%': amount})|raw }}</p>
            {% endif %}
        </div>
    </div>
    <div class="right">
    </div>
</div>
{% endblock %}