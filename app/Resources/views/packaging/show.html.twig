{% extends 'base-admin.html.twig' %}

{% block body %}
    <h1>Packaging</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ packaging.id }}</td>
            </tr>
            <tr>
                <th>Limit</th>
                <td>{{ packaging.limit }}</td>
            </tr>
            <tr>
                <th>France</th>
                <td>{{ packaging.france }}</td>
            </tr>
            <tr>
                <th>International</th>
                <td>{{ packaging.international}}</td>
            </tr>
            <tr>
                <th>Maximal Limit</th>
                <td>{{ packaging.maximalLimit}}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_packaging_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_packaging_edit', { 'id': packaging.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
