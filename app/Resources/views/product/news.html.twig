{% set bodyClass = "editions news" %}
{% set bodyBackground = page.background %}
{% extends 'base.html.twig' %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/css/editions.css') }}">
{% endblock %}
{% block content %}
<div class="content">
    <div class="zone">
      <h1><small>{{ page.title }} </small>{{ page.subTitle }}</h1>
      <div class="highlighted">
        <div class="left">
          <h2>{{ 'news.title' | trans }}</h2>
          <p>{{ products[0].memoprd | raw }}</p>
          <a class="button right-arrow" href="{{ url('collection-' ~ app.request.locale, { id: products[0].codprd }) }}">{{ 'news.button.discover' | trans }}</a>
        </div>
        <div class="right">
          <div class="carousel active">
            <div class="slides">
              <div class="slide active">
                <a class="image"
                  title="{{ products[0].produit }}"
                  href="{{ url('collection-' ~ app.request.locale, { id: products[0].codprd }) }}"
                  style="{{ asset('http://rochedor.fr/site/' ~ products[0].adimg)|background }}">
                </a>
              </div>
            </div>
            <div class="prev"></div>
            <div class="next"></div>
          </div>
        </div>
      </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
<script src="{{ asset("assets/js/editions.js") }}"></script>
{% endblock %}
