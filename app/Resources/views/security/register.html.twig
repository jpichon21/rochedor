{% set bodyClass = "page" %}
{% extends 'base.html.twig' %}
{% block stylesheets %}
<link rel="stylesheet" type="text/css" media="screen" href="{{ asset("assets/css/pure-css-grids.css") }}">
{% endblock %}
{% block content %}
<div class="content">
    <div class="left">
        <div class="inner">
            <h1><small>Formulaire</small>D'inscription</h1>
            <div class="dropdown single">
                <div class="item">
                <h2>Formulaire</h2>
                {% if form is defined %}
                <div class="panel active">
                    <div class="pure-g">
                        <div class="pure-u-1-3">
                            {{ form_widget(form.civil) }}
                        </div>
                        <div class="pure-u-1-3">
                            {{ form_widget(form.nom) }}
                        </div>
                        <div class="pure-u-1-3">
                            {{ form_widget(form.prenom) }}
                        </div>
                        <div class="pure-u-1-2">
                            {{ form_widget(form.adresse) }}
                        </div>
                        <div class="pure-u-1-2">
                            {{ form_widget(form.cp) }}
                        </div>
                        <div class="pure-u-1-2">
                            {{ form_widget(form.ville) }}
                        </div>
                        <div class="pure-u-1-2">
                            {{ form_widget(form.pays) }}
                        </div>
                        <div class="pure-u-1-2">
                            {{ form_widget(form.tel) }}
                        </div>
                        <div class="pure-u-1-2">
                            {{ form_widget(form.mobil) }}
                        </div>
                        <div class="pure-u-1-2">
                            {{ form_widget(form.datnaiss) }}
                        </div>
                        <div class="pure-u-1-2">
                            {{ form_widget(form.profession) }}
                        </div>
                        <div class="pure-u-1-2">
                            {{ form_widget(form.password.first) }}
                        </div>
                        <div class="pure-u-1-2">
                            {{ form_widget(form.password.second) }}
                        </div>
                        <div class="pure-u-1-1">
                            <input type="submit" class="input button"value="{{ 'form.label.submit'|trans }}" />
                        </div>
                    </div>
                </div>
                {% else %}
                {{ 'security.reset.token_not_found'|trans }}
                {% endif %}
                </div>
            </div>
        </div>
    </div>
    <div class="hole">
    </div>
    <div class="right">
        <div class="carousel">
            <div class="slides">
                <div class="slide active">

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
<script src="{{ asset("assets/js/page.js") }}"></script>
{% endblock %}